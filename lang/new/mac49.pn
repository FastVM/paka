syntax 'static 'if n body {
    syntax if n {
        body
    }
}

syntax 'static 'repeat n body {
    syntax if (n > 0) {
        body
        static repeat {
            syntax eval (n - 1)
        } body
    }
}

static if (false) {
    print 10
}

static repeat 3 {
    print "hello"
}

static range 0 to 2 {
    print "wow"
}
