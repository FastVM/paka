add(x; y) =
    if x == 0:
        y
    else:
        add(x-1; y+1)

sub(x; y) =
    if y == 0:
        x
    else: if x == 0:
        y
    else:
        sub(x - 1; y - 1)

mul3(a; x; y) =
    if y == 0:
        a
    else:
        mul3(add(a; x); x; sub(y; 1))
mul = mul3(0)

pow3(a; x; y) =
    if y == 0:
        a
    else:
        pow3(mul(a; x); x; sub(y; 1))
pow = pow3(1)

