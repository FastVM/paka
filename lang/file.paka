
def file_dir(filename) {
    i = 0
    n = file_dir_len(filename)
    ret = []
    while i < n {
        ret ~= [filename[i]]
        i = i + 1
    }
    return ret
}

def file_dir_len(filename) {
    foreach reverse chr @i: filename {
        if chr == '/' {
            return i
        }
    }
}
