def emit_readc(form, out) {
    name = out[4][0] ~ ['/'] ~ form[1][1]
    src = read(name)
    if src == none {
        put("file not found for readc: ")
        puts(form[1][1])
        exit
    } else {
        ret = reg(out)
        out[0] ~= [opcode.do_string_new, ret, length(src)]
        out[0] ~= src
        return none
    }
}

