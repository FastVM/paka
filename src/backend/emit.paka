
def reg(out) {
    out[1] = out[1] + 1
    return out[1]
}

def emit_num(form, out) {
    ret = reg(out)
    out[0] ~= [opcode.do_store_int, ret, form[1]]
    return ret
}

def emit_true(form, out) {
    ret = reg(out)
    out[0] ~= [opcode.do_store_bool, ret, 1]
    return ret
}

def emit_false(form, out) {
    ret = reg(out)
    out[0] ~= [opcode.do_store_bool, ret, 0]
    return ret
}

def emit_none(form, out) {
    ret = reg(out)
    out[0] ~= [opcode.do_store_none, ret]
    return ret
}

def emit_binop(op, form, out) {
    r1 = emit_to(form[1], out)
    r2 = emit_to(form[2], out)
    ret = reg(out)
    out[0] ~= [op, ret, r1, r2]
    return ret
}

def emit_binop2(op_reg, op_num, form, out) {
    r1 = emit_to(form[1], out)
    if form[2][0] == vm.ast.num {
        ret = reg(out)
        out[0] ~= [op_num, ret, r1, form[2][1]]
        return ret
    } else {
        r2 = emit_to(form[2], out)
        ret = reg(out)
        out[0] ~= [op_reg, ret, r1, r2]
        return ret
    }
}

def emit_putchar(form, out) {
    r1 = emit_to(form[1], out)
    out[0] ~= [opcode.do_putchar, r1]
    return none
}

def emit_extend(form, out) {
    r1 = emit_to(form[1], out)
    if form[2][0] == vm.ast.array {
        foreach skip(1) ent: form[2] {
            rn = emit_to(ent, out)
            out[0] ~= [opcode.do_push, r1, rn]
        }
    } else {
        r2 = emit_to(form[2], out)
        out[0] ~= [opcode.do_extend, r1, r2]
    }
    return r1
}

def emit_exec(form, out) {
    r1 = emit_to(form[1], out)
    r2 = emit_to(form[2], out)
    out[0] ~= [opcode.do_exec, r1, r2]
    return none
}

def emit_length(form, out) {
    r1 = emit_to(form[1], out)
    ret = reg(out)
    out[0] ~= [opcode.do_length, ret, r1]
    return ret
}

def emit_type(form, out) {
    r1 = emit_to(form[1], out)
    ret = reg(out)
    out[0] ~= [opcode.do_type, ret, r1]
    return ret
}

def emit_do(form, out) {
    ret = none
    foreach skip(1) stmt: form {
        ret = emit_to(stmt, out)
    } 
    return ret
}

def emit_ident(form, out) {
    res = findvar(out[2], form[1])
    if res != none {
        return res
    }
    res = findvar(out[4], form[1])
    if res != none {
        oreg = reg(out)
        out[0] ~= [opcode.do_store_int, oreg, res]
        return oreg
    }
    oreg = reg(out)
    out[0] ~= [opcode.do_store_int, oreg, [link.call, form[1]]]
    return oreg
}

def emit_set(form, out) {
    if form[1][0] == vm.ast.ident {
        found = findvar(out[2], form[1][1])
        if found == none {
            from = emit_to(form[2], out)
            to = reg(out)
            out[2] ~= [form[1][1], to]
            out[0] ~= [opcode.do_store_reg, to, from]
            return to
        } else {
            from = emit_to(form[2], out)
            out[0] ~= [opcode.do_store_reg, found, from]
            return found
        }
    }
    if form[1][0] == vm.ast.index {
        array = emit_to(form[1][1], out)
        index = emit_to(form[1][2], out)
        from = emit_to(form[2], out)
        out[0] ~= [opcode.do_index_set, array, index, from]
        return array
    }
    put("cannot set to: ")
    puts(form[1][0])
    exit
}

def jump(out) {
    count = length(out[3])
    out[3] ~= [count]
    return count
}

def goto(jump) {
    return [link.jump, jump] 
}

def label(jump) {
    return [link.label, jump]
}

def emit_def(form, out) {
    jover = jump(out)
    call = form[1]
    body = form[2]
    tmp1 = out[1]
    tmp2 = out[2]
    out[2] = []
    foreach skip(2) ent @i: call {
        out[2] ~= [ent[1], i - 1]
    }
    out[1] = i - 1
    nregs = length(out[0]) + 2
    out[0] ~= [opcode.do_jump, goto(jover), 256]
    out[0] ~= [[link.func, call[1][1]]]
    resreg = emit_to(body, out)
    if resreg == none {
        out[0] ~= [opcode.do_store_none, 0, opcode.do_return, 0]
    } else {
        out[0] ~= [opcode.do_return, resreg]
    }
    out[0][nregs] = out[1]
    out[1] = tmp1
    out[2] = tmp2
    out[0] ~= [label(jover)]
    return none
}

def emit_return(form, out) {
    rreg = emit_to(form[1], out)
    out[0] ~= [opcode.do_return, rreg]
    return none
}

def emit_exit(form, out) {
    out[0] ~= [0]
    return none
}

def emit_call_static_opt(name, args, out) {
    ret = reg(out)
    if length(args) == 0 {
        out[0] ~= [opcode.do_static_call0, ret, [link.call, name]]
        out[0] ~= args
        return ret
    }
    if length(args) == 1 {
        out[0] ~= [opcode.do_static_call1, ret, [link.call, name]]
        out[0] ~= args
        return ret
    }
    if length(args) == 2 {
        out[0] ~= [opcode.do_static_call2, ret, [link.call, name]]
        out[0] ~= args
        return ret
    }
    if length(args) == 3 {
        out[0] ~= [opcode.do_static_call3, ret, [link.call, name]]
        out[0] ~= args
        return ret
    }
    out[0] ~= [opcode.do_static_call, ret, [link.call, name], length(args)]
    out[0] ~= args
    return ret
}

def emit_call(form, out) {
    if form[1][0] == vm.ast.ident {
        local = findvar(out[2], form[1][1])
        regs = []
        foreach skip(2) arg: form {
            regs ~= [emit_to(arg, out)]
        } 
        if local == none {
            ret = emit_call_static_opt(form[1][1], regs, out)
        } else {
            ret = reg(out)
            out[0] ~= [opcode.do_dynamic_call, ret, local, length(regs)]
            out[0] ~= regs
        }
        return ret
    } else {
        funcreg = emit_to(form[1], out)
        regs = []
        foreach skip(2) arg: form {
            regs ~= [emit_to(arg, out)]
        } 
        ret = reg(out)
        out[0] ~= [opcode.do_dynamic_call, ret, funcreg, length(regs)]
        out[0] ~= regs
        return ret
    }
}

def emit_branch_alike(cond, jfalse, jtrue, out) {
    if cond[0] == "==" {
        lhs = emit_to(cond[1], out)
        if cond[2][0] == vm.ast.num {
            out[0] ~= [opcode.do_branch_equal_int, lhs, cond[2][1], goto(jfalse), goto(jtrue)]
        } else {
            rhs = emit_to(cond[2], out)
            out[0] ~= [opcode.do_branch_equal, lhs, rhs, goto(jfalse), goto(jtrue)]
        }
        return none
    }
    if cond[0] == "!=" {
        lhs = emit_to(cond[1], out)
        if cond[2][0] == vm.ast.num {
            out[0] ~= [opcode.do_branch_not_equal_int, lhs, cond[2][1], goto(jfalse), goto(jtrue)]
        } else {
            rhs = emit_to(cond[2], out)
            out[0] ~= [opcode.do_branch_not_equal, lhs, rhs, goto(jfalse), goto(jtrue)]
        }
        return none
    }
    if cond[0] == "<" {
        lhs = emit_to(cond[1], out)
        if cond[2][0] == vm.ast.num {
            out[0] ~= [opcode.do_branch_less_int, lhs, cond[2][1], goto(jfalse), goto(jtrue)]
        } else {
            rhs = emit_to(cond[2], out)
            out[0] ~= [opcode.do_branch_less, lhs, rhs, goto(jfalse), goto(jtrue)]
        }
        return none
    }
    if cond[0] == ">" {
        lhs = emit_to(cond[1], out)
        if cond[2][0] == vm.ast.num {
            out[0] ~= [opcode.do_branch_greater_int, lhs, cond[2][1], goto(jfalse), goto(jtrue)]
        } else {
            rhs = emit_to(cond[2], out)
            out[0] ~= [opcode.do_branch_greater, lhs, rhs, goto(jfalse), goto(jtrue)]
        }
        return none
    }
    if cond[0] == "<=" {
        lhs = emit_to(cond[1], out)
        rhs = emit_to(cond[2], out)
        out[0] ~= [opcode.do_branch_less_than_equal, lhs, rhs, goto(jfalse), goto(jtrue)]
        return none
    }
    if cond[0] == ">=" {
        lhs = emit_to(cond[1], out)
        if cond[2][0] == vm.ast.num {
            out[0] ~= [opcode.do_branch_greater_than_equal_int, lhs, cond[2][1], goto(jfalse), goto(jtrue)]
        } else {
            rhs = emit_to(cond[2], out)
            out[0] ~= [opcode.do_branch_greater_than_equal, lhs, rhs, goto(jfalse), goto(jtrue)]
        }
        return none
    }
    reg = emit_to(cond, out)
    out[0] ~= [opcode.do_branch_bool, reg, goto(jfalse), goto(jtrue)]
    return none
}

def emit_while(form, out) {
    jredo = jump(out)
    jtrue = jump(out)
    jfalse = jump(out)
    out[0] ~= [label(jredo)]
    emit_branch_alike(form[1], jfalse, jtrue, out)
    out[0] ~= [label(jtrue)]
    emit_to(form[2], out)
    out[0] ~= [opcode.do_jump, goto(jredo)]
    out[0] ~= [label(jfalse)]
    return none
}

def emit_if(form, out) {
    jout = jump(out)
    jtrue = jump(out)
    jfalse = jump(out)
    emit_branch_alike(form[1], jfalse, jtrue, out)
    out[0] ~= [label(jtrue)]
    emit_to(form[2], out)
    out[0] ~= [opcode.do_jump, goto(jout)]
    out[0] ~= [label(jfalse)]
    emit_to(form[3], out)
    ## out[0] ~= [opcode.do_jump, goto(jout)]
    out[0] ~= [label(jout)]
    return none
}

