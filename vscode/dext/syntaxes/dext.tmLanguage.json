{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "dext",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dext",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dext",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dext",
					"match": "\\\\(n|r|s|t)"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "number.integer.dext",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "number.floating.dext",
					"match": "\\b[0-9\\.]+\\b"
				}
			]
		}
	},
	"scopeName": "source.dext"
}